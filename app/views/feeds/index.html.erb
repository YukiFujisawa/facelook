<% content_for(:html_title) { 'feeds_list' } %>
<div class="main container-fluid">
  <div class="row">

    <div class="leftcolumn col-md-2">
      <h3>HIDARI</h3>
      <ul>
        <li>List1</li>
        <li>List2</li>
        <li>List3</li>
      </ul>
    </div>

    <div class="maincolumn col-md-6">
      <h1 class="maintitle">TIMELINE</h1>
        <button type="button" class="btn btn-primary"><%= link_to "New feed", new_feed_path %></button>
        <% @feeds.reverse_each do |feed| %>
          <div class="feed_panel">
            <div class="user_plof">
              <%= feed.user.name %>さんの投稿
            </div>
            <p>タイトル：<%= feed.title %></p>
            <div class="post_image">
              <% if feed.image.url %>
                <p>画像:<%= image_tag feed.image.url %></p>
              <% end %>
            </div>
            <div class="post_content">
              内容：<%= feed.content %>
            </div>
            <table>
              <tr>
                <td><%= link_to "Detail", feed_path(feed.id) %></td>
                <% if feed.user_id == current_user.id %>
                  <td><%= link_to "Edit", edit_feed_path(feed.id) %></td>
                  <td><%= link_to "Destroy", feed_path(feed.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %></td>
                <% end %>
              </tr>
            </table>
          </div>
        <% end %>
      </div>

    <div class="rightcolumn col-md-4">
      <h2>MIGI</h2>
      <ul>
        <li>List1</li>
        <li>List2</li>
        <li>List3</li>
      </ul>
    </div>
  </div>
</div>
