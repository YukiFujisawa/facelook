<% content_for(:html_title) { 'feeds_confirm' } %>
<h3>以下の内容で送信します。よろしいですか？</h3>

<%= form_with(model: @feed, url: feeds_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :image_cache %>

  <p>タイトル:<%= @feed.title %></p>
  <p>本文:<%= @feed.content %></p>
  <% if @feed.image.url %>
    <p>画像:<%= image_tag @feed.image.url %></p>
  <% end %>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @feed, url: new_feed_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>
