<% content_for(:html_title) { 'feeds_detail' } %>
<h1>詳細画面</h1>
<p>タイトル:<%= @feed.title %></p>
<p>本文:<%= @feed.content %></p>
<% if @feed.image.url %>
  <p>画像:<%= image_tag @feed.image.url %></p>
<% end %>
<% unless @feed.user_id == current_user.id %>
  <% if @favo.present? %>
    <%= link_to 'お気に入り解除する', favo_path(id: @favo.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favos_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "Index", feeds_path %>
